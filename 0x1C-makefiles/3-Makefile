CC=gcc
SRC =main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
RM=rm -rf
TEMP= *~ \#*\# *.swp

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

%.o: %.c
	$(CC) -c $< -o $@

clean:
	-$(RM) $(TEMP) $(NAME)

oclean:
	-$(RM) $(OBJ)

fclean:
	-$(RM) $(TEMP) $(NAME) $(OBJ)

re: fclean all
